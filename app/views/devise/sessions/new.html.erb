<div class="video-background">
  <video autoplay loop muted playsinline>
    <source src="https://videos.pexels.com/video-files/2867832/2867832-uhd_2560_1440_25fps.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>
</div>

<div class="container">
  <section class="mx-auto my-5" style="max-width: 23rem;">

    <div class="card card-form mt-2 mb-4">
      <div class="card-body rounded-top blue darken-4">
        <h3 class="font-weight-bold text-center text-uppercase text-white my-4">Sign In</h3>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "pb-5 px-2" }) do |f| %>

          <div class="d-flex justify-content-start align-items-center mb-4">
            <i class="far fa-envelope fa-lg text-white fa-fw me-3"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :email, required: false, input_html: { class: "form-control", autocomplete: "email" }, label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-start align-items-center pb-3">
            <i class="far fa-star fa-lg text-white fa-fw me-3"></i>
            <div class="form-outline form-white w-100">
              <%= f.input :password, required: false, hint: ("At least 8 characters and 1 digit" if @minimum_password_length), input_html: { class: "form-control", autocomplete: "new-password" }, label_html: { class: "form-label" } %>
            </div>
          </div>

          <div class="d-flex justify-content-center align-items-center pb-3">
            <%= f.button :submit, "Sign in", class: "btn btn-outline-light btn-rounded btn-block my-4 z-depth-0" %>
          </div>

          <div class="d-flex justify-content-center pb-3">
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-white" %>
          </div>

          <div class="d-flex justify-content-center pb-3">
            <%= link_to "Sign up", new_registration_path(resource_name), class: "text-white" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>

  </section>
</div>
